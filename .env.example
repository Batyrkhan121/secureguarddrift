# .env.example
# Скопируйте в .env и заполните значения

# API Server
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info

# Storage
STORAGE_TYPE=sqlite
STORAGE_PATH=./data/secureguard.db

# OTEL Receiver
OTEL_HTTP_PORT=4318
OTEL_GRPC_PORT=4317

# Collector
INGRESS_LOG_PATH=/var/log/nginx/access.log
INGRESS_LOG_FORMAT=nginx

# Auth (optional)
API_KEY=

# GitOps Settings (Week 7)
GITOPS_ENABLED=false
GITOPS_PROVIDER=github
GITOPS_TOKEN=your_github_token_here
GITOPS_API_URL=https://api.github.com
GITOPS_REPO_OWNER=your_org
GITOPS_REPO_NAME=your_gitops_repo
GITOPS_BASE_BRANCH=main
GITOPS_BRANCH_PREFIX=secureguard-policy-
GITOPS_POLICIES_PATH=kubernetes/network-policies

# Slack Integration (Week 8)
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_MIN_SEVERITY=high
SLACK_RATE_LIMIT_SECONDS=60

# Jira Integration (Week 8)
JIRA_ENABLED=false
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=PROJ
JIRA_ISSUE_TYPE=Task

# SIEM Integration (Week 8)
SIEM_ENABLED=false
SIEM_TRANSPORT=syslog
SIEM_SYSLOG_HOST=localhost
SIEM_SYSLOG_PORT=514
SIEM_SYSLOG_PROTOCOL=udp
SIEM_WEBHOOK_URL=

# Notification Router Rules (Week 8)
ROUTER_CRITICAL_TARGETS=slack,jira
ROUTER_HIGH_TARGETS=slack
ROUTER_MEDIUM_TARGETS=siem
ROUTER_LOW_TARGETS=
