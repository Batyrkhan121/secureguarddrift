# .env.example
# Скопируйте в .env и заполните значения

# API Server
API_HOST=0.0.0.0
API_PORT=8000
LOG_LEVEL=info

# Storage
STORAGE_TYPE=sqlite
STORAGE_PATH=./data/secureguard.db

# OTEL Receiver
OTEL_HTTP_PORT=4318
OTEL_GRPC_PORT=4317

# Collector
INGRESS_LOG_PATH=/var/log/nginx/access.log
INGRESS_LOG_FORMAT=nginx

# Auth (optional)
API_KEY=
